<!DOCTYPE entities [
	<!ELEMENT entities ANY>
	<!ELEMENT entity ANY>
	<!ATTLIST entity id ID #IMPLIED>
	<!ATTLIST entity ref IDREF #IMPLIED>

	<!ELEMENT Display ANY>
]>


<entities>
	
	<entity id="pisces">
		<Display>
			<name>Pisces</name>
			<lore>He wears a sky-blue flare dress lined with white. Mirrored on both hands, each of five nails is painted a different pastel color. Mascaraed lashes frame his doe eyes. Most notably, white cat-ears protrude from his blonde hair.</lore>
			<textureName>pisces2</textureName>
			<color>#78ceeb</color>
		</Display>
	</entity>
	
	<entity id="knight">
		<Display>
			<name>Knight of Cydonia</name>
			<lore>After years of service in the Cydonian sands, the martian sand has visibly gnawed at his armor.</lore>
			<textureName>human2</textureName>
		</Display>
	
		<Creature />
	</entity>
	
	<entity id="chest">
		<Display>
			<name>chest</name>
			<lore>it stores things.</lore>
			<textureName>chest</textureName>
		</Display>
		<Inventory>
			<otherEntitiesCanOpen>true</otherEntitiesCanOpen>
			<entity ref="flintlock" />
			<entity ref="orgoneAccumulator" />
		</Inventory>
	</entity>
	
	<entity id="flintlock">
		<Display>
			<name>flintlock</name>
		</Display>
		<Item />
	</entity>
	
	<entity id="orgoneAccumulator">
		<Display>
			<name>Orgone Accumulator</name>
			<lore>a gunny!</lore>
			<textureName>flintlock</textureName>
		</Display>
		<Item />
	</entity>

</entities>

